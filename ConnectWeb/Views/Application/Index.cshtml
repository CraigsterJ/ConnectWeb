@model IEnumerable<ConnectWeb.Models.DataModels.Application>
@{
    ViewData["Title"] = "Applications";
}
<h2>Manage Applications</h2>
<style>
</style>
<p>
    <a asp-controller="Application" asp-action="Create" class="btn btn-primary btn-large pull-right bot-btn-create-new">Create New</a>
</p>
<div class="row">
    <table class="table table-bordered table-striped">
        <tr>
            @*<th>Id</th>*@
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit Application"><b>@item.Name</b></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td width="130">
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit Application"><i class="fa fa-pencil-square-o bot-fa-icon" aria-hidden="true"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete Application"><i class="fa fa-trash bot-fa-icon" aria-hidden="true"></i></a>
                    <ul class="nav navbar-nav bot-menu-popup">
                        <li class="dropdown bot-menu-popup-list">
                            <a href="#" class="dropdown-toggle bot-menu-popup-a" data-toggle="dropdown" title="Manage Application"><i class="fa fa-cog bot-fa-icon" aria-hidden="true"></i><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-route-appId="@item.Id" asp-controller="Users">Manage Users</a></li>
                                <li><a asp-action="Index" asp-route-appId="@item.Id" asp-controller="Roles">Manage Roles</a></li>
                            </ul>
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </table>
</div>
