@model IEnumerable<ConnectWeb.Models.DataModels.Application>
@{
    ViewData["Title"] = "Applications";
}
<h2>Applications</h2>

<p>
    <a asp-controller="Application" asp-action="Create">Create New</a>
</p>
<div class="row">
    <table class="table table-bordered table-striped">   
        <tr>
            <th>Id</th>
            <th>Guid</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Index" asp-route-appId="@item.Id" asp-controller="Users">Manage Users</a> |
                <a asp-action="Index" asp-route-appId="@item.Id" asp-controller="Roles">Manage Roles</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </table>
</div>
