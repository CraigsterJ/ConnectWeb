@model IEnumerable<ConnectWeb.Models.DataModels.Permission>
@{
    ViewData["Title"] = "Applications";
}
<h2>Permissions for @ViewBag.ApplicationName</h2>

<p>
    <a asp-controller="Permissions" asp-action="Create" asp-route-appId="@ViewBag.AppId" >Create New</a>
</p>
<div class="row">
    <table class="table table-bordered table-striped">   
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Permissions" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-controller="Permissions" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Index" asp-controller="Application">Back to Applications</a>
</div>
