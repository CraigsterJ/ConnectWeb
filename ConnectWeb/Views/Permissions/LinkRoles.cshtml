@model ConnectWeb.Models.DataModels.PermissionsToRolesViewModel;
@{
    ViewData["Title"] = "Edit Permission";
}
@*<link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css">*@
<h2>Select Roles for Permissions</h2>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <fieldset>
                    <legend>Roles for:
                        <select class="form-control" style="width:400px;" asp-for="CurrentPermissionId" asp-items="@(new SelectList(Model.PossiblePermissions,"Id","Name"))">
                           <option>.. Select Permission ..</option>
                         </select>
                    </legend>
                    <div class="col-lg-8">

                        @foreach (var role in Model.PossibleRoles)
                        {
                            <label for="role-@role.Id">@role.Name</label>
                            <input type="checkbox" name="role" class="check-box" id="role-@role.Id" value="@role.Id" />
                        }
                        @*<label for="insurance">Insurance</label>
        <input type="checkbox" name="insurance" id="insurance">
        <label for="horizontal-spinner" class="ui-controlgroup-label"># of cars</label>
        <input id="horizontal-spinner" class="ui-spinner-input">*@
                        <input type="submit" value="Save" class="btn btn-default" style="width:150px;margin-left:10px;" />
                    </div>
                </fieldset>
                <br>
                <div class="form-group">
                </div>
                <div class="form-group">

                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-route-appId="@Model.ApplicationId" asp-controller="Applications">Back to Applications</a>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
@*<script src="~/lib/jquery-ui/jquery-ui.js"></script>*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(function () {
        $(".check-box").checkboxradio();
    });
</script>